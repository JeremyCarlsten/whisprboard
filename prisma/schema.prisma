generator client {
  provider        = "prisma-client"
  output          = "./generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
}

model Product {
  id        String     @id @default(cuid())
  slug      String     @unique
  name      String
  createdAt DateTime   @default(now())
  feedback  Feedback[]
}

model Feedback {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  title       String
  body        String   @default("")
  authorName  String   @default("Anonymous")
  authorEmail String   @default("")
  score       Int      @default(0)
  status      String   @default("New")
  adminNote   String   @default("")
  createdAt   DateTime @default(now())
  votes       Vote[]
  comments    Comment[]

  @@index([productId])
}

model Vote {
  id          String   @id @default(cuid())
  feedbackId  String
  feedback    Feedback @relation(fields: [feedbackId], references: [id])
  fingerprint String
  value       Int      @default(1)
  createdAt   DateTime @default(now())

  @@unique([feedbackId, fingerprint])
  @@index([feedbackId])
}

model Comment {
  id         String   @id @default(cuid())
  feedbackId String
  feedback   Feedback @relation(fields: [feedbackId], references: [id])
  body       String
  authorName String   @default("Admin")
  isAdmin    Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([feedbackId])
}
