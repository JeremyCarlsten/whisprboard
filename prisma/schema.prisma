generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user")
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id        String     @id @default(cuid())
  slug      String     @unique
  name      String
  createdAt DateTime   @default(now())
  feedback  Feedback[]
}

model Feedback {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  title       String
  body        String   @default("")
  authorName  String   @default("Anonymous")
  authorEmail String   @default("")
  score       Int      @default(0)
  status      String   @default("New")
  adminNote   String   @default("")
  createdAt   DateTime @default(now())
  votes       Vote[]
  comments    Comment[]

  @@index([productId])
}

model Vote {
  id          String   @id @default(cuid())
  feedbackId  String
  feedback    Feedback @relation(fields: [feedbackId], references: [id])
  fingerprint String
  value       Int      @default(1)
  createdAt   DateTime @default(now())

  @@unique([feedbackId, fingerprint])
  @@index([feedbackId])
}

model Comment {
  id         String   @id @default(cuid())
  feedbackId String
  feedback   Feedback @relation(fields: [feedbackId], references: [id])
  body       String
  authorName String   @default("Admin")
  isAdmin    Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([feedbackId])
}
